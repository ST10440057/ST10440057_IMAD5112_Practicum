<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomePage">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="409dp"
            android:layout_height="411dp"
            android:orientation="vertical"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="395dp"
                android:layout_height="169dp"
                app:srcCompat="@drawable/logo" />

            <EditText
                android:id="@+id/etWeatherMax"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:ems="10"
                android:inputType="text"
                android:text="Enter Mondays Max Tempreture"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/etWeatherMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="Enter Mondays Min Tempreture"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/etConditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="Enter Mondays Conditions"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:text="Add" />

            <TextView
                android:id="@+id/tvAverage"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:fontFamily="@font/alef"
                android:text="Average Temp:" />

        </LinearLayout>

        <Button
            android:id="@+id/btnExit"
            android:layout_width="105dp"
            android:layout_height="62dp"
            android:backgroundTint="@color/blue"
            android:text="Exit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.232"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.434" />

        <Button
            android:id="@+id/btnReport"
            android:layout_width="105dp"
            android:layout_height="62dp"
            android:backgroundTint="@color/blue"
            android:text="Daily Report"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.732"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.781" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="103dp"
            android:layout_height="54dp"
            android:backgroundTint="@color/blue"
            android:text="Clear "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.932" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>